generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Concentration {
  OIL
  EDT
  EDP
}

enum SizeMl {
  ML_10
  ML_15
  ML_30
  ML_100
}

model Product {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  image         String
  rating        Int           @default(0)
  sex           String
  concentration Concentration
  variants      Variant[]
}

model Variant {
  id        Int         @id @default(autoincrement())
  product   Product     @relation(fields: [productId], references: [id])
  productId Int
  sizeMl    SizeMl
  price     Int
  comboItem ComboItem[]
}

model Combo {
  id         Int         @id @default(autoincrement())
  name       String
  image      String
  price      Int
  isActive   Boolean
  comboItems ComboItem[]
}

model ComboItem {
  id        Int     @id @default(autoincrement())
  variant   Variant @relation(fields: [variantId], references: [id])
  variantId Int
  combo     Combo   @relation(fields: [comboId], references: [id])
  comboId   Int
  quantity  Int
}
