generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Concentration {
  OIL
  EDT
  EDP
}

enum SizeMl {
  ML_10
  ML_15
  ML_30
  ML_100
}

model Product {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  imageId       String        @unique
  rating        Int           @default(0)
  sex           String
  concentration Concentration

  variants Variant[]
  image    Image     @relation(fields: [imageId], references: [id])
}

model Variant {
  id        Int    @id @default(autoincrement())
  productId Int
  sizeMl    SizeMl
  price     Int

  comboItem ComboItem[]
  product   Product     @relation(fields: [productId], references: [id])
}

model Combo {
  id         Int         @id @default(autoincrement())
  name       String
  imageId    String      @unique
  price      Int
  isActive   Boolean
  comboItems ComboItem[]

  image Image @relation(fields: [imageId], references: [id])
}

model ComboItem {
  id        Int @id @default(autoincrement())
  variantId Int
  comboId   Int
  quantity  Int

  combo   Combo   @relation(fields: [comboId], references: [id])
  variant Variant @relation(fields: [variantId], references: [id])
}

model Image {
  id       String   @id
  name     String   @unique
  metadata String
  variants String[]
  uploaded DateTime

  product Product?
  combo   Combo?
}
